<div class='col-lg-10 offset-1'>
  <h3 class='text-primary p-2'>
    <i class='fas fa-book'></i>&emsp;<strong>Guide</strong>
    <span class='float-right'>
      <%= link_to new_howto_path, class: 'btn btn-sm btn-primary'  do %>
        <i class='fas fa-book'></i>&nbsp;<i class='fas fa-plus'></i>
        &emsp;
        <strong>Creare una Nuova Guida</strong>
      <% end %>
    </span>
  </h3>
  <hr class='hr-primary p-2'/>
  <%= render @howtos %>
  <br/>
  <div class='col-lg-6 offset-3 text-center'>
    <%= will_paginate @howtos, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
  </div>
  <br/>
</div>
</div>
