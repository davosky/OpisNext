<% if @generic_subscription.cancellation == true %>
  <div class='col-lg-6 offset-3'>
    <div class='card border-primary'>
      <div class='card-body text-center'>
        <%= image_tag('authorization.svg')%>
        <br/>
        &emsp;
        <p>
          <strong>
            Siamo spiacenti.
          </strong>
          <br/>
          Non puoi modificare una sottoscrizione anullata.
        </p>
      </div>
    </div>
  </div>
<% else %>
  <div class='row'>
    <div class='col-12'>
      <h3 class='text-primary p-2'>
        <i class='fas fa-pencil-alt'></i>
        <i class='fas fa-address-card'></i>
        &emsp;
        <strong>
          Modificando la Sottoscrizione GENERICA
          &emsp; Numero:&nbsp;<%= @generic_subscription.name %>
          &emsp; Del:&nbsp;<%= l(@generic_subscription.date) %>
        </strong>
      </h3>
      <hr class='hr-primary p-2'/>
    </div>
  </div>
  <div class='row'>
    <% if @generic_subscription.pdf.attached? %>
      <%= render 'form_cancellation', generic_subscription: @generic_subscription %>
    <% else %>
      <%= render 'form', generic_subscription: @generic_subscription %>
    <% end %>
    <br/>
    <br/>
  </div>
<% end %>
